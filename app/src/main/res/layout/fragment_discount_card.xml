<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"

    xmlns:app="http://schemas.android.com/apk/res-auto">



            <RelativeLayout
                android:id="@+id/relative_discountone"
                android:layout_width="wrap_content"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/roundimg_one"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"




                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:src="@drawable/rounded_two"

                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                   />

                <ImageView
                    android:id="@+id/IV_vdisc_image"
                    android:layout_width="250dp"
                    android:layout_height="158dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vgv"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorPrimary"

                    android:layout_alignStart="@+id/TV_disc_percentage"
                    android:layout_alignTop="@+id/IV_vdisc_image"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/rounded"

                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                   />

                <TextView
                    android:id="@+id/TV_disc_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/roundedImageView"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="17dp"

                    android:text="75% Discount in KFC"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />

                <TextView
                    android:id="@+id/textViewu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TV_disc_percentage"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"

                    android:text="Percide January 7 2018 Dont miss it"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <RatingBar
                    android:id="@+id/RB_vendr_rating"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewu"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"

                    android:max="5"
                    android:progressBackgroundTint="@color/coloryellow"
                    android:progressTint="@color/coloryellow"
                    android:rating="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/TV_disc_percentage"
                        android:layout_marginBottom="29dp"
                        android:layout_marginStart="29dp"
                        android:layout_toEndOf="@+id/IV_disc_image"
                        android:background="@drawable/but_selected"

                        android:text="Unfollow"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/button"
                        android:layout_below="@+id/TV_disc_percentage"

                        android:layout_marginTop="25dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/ic_location_on_black_24dp" />

                </LinearLayout>

            </RelativeLayout>

</RelativeLayout>