<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.weqar.weqar.Fragments.BotNav_SettingsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative_layout_profile"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:id="@+id/account_setting_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20sp"

            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/homescreen_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"

            android:background="@drawable/home_toolbar_notification"

            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/relative_layout_profile"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundedImageView"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rounded"
                android:layout_marginBottom="20dp"
                app:riv_border_color="@color/colorPrimary"
                app:riv_border_width="2dip"
                app:riv_oval="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="15dp"
                android:background="@color/colorHints">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:textSize="19sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shabbir Ahmed Annik"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHints"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shabbir@gmail.com"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHints"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="......."
                    android:textStyle="bold"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHints"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="March 27,1996"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>
<Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Update"
    android:textColor="@color/colorWhite"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:textAllCaps="false"
    android:textSize="18sp"
    android:layout_marginBottom="50dp"

    android:background="@drawable/but_selected"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
